<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--FavoritesButton-->
    <SolidColorBrush x:Key="FavoritesButton.BorderBrush" Color="{DynamicResource Window.Text.Color}" Opacity="0.5"/>
    <SolidColorBrush x:Key="FavoritesButton.Background" Color="{DynamicResource Window.Background.Color}"/>
    <SolidColorBrush x:Key="FavoritesButton.Key.Foreground" Color="{DynamicResource Window.Text.Color}" />
    <SolidColorBrush x:Key="FavoritesButton.Text.Foreground" Color="{DynamicResource Window.Text.Color}" />

    <SolidColorBrush x:Key="FavoritesButton.MouseOver.BorderBrush" Color="{DynamicResource Window.Text.Color}"/>
    <SolidColorBrush x:Key="FavoritesButton.MouseOver.Background" Color="{DynamicResource Window.Text.Color}"/>
    <SolidColorBrush x:Key="FavoritesButton.MouseOver.Key.Foreground" Color="{DynamicResource Window.Background.Color}"/>
    <SolidColorBrush x:Key="FavoritesButton.MouseOver.Text.Foreground" Color="{DynamicResource Window.Background.Color}"/>

    <SolidColorBrush x:Key="FavoritesButton.Focused.BorderBrush" Color="{DynamicResource Window.Text.Color}"/>
    <SolidColorBrush x:Key="FavoritesButton.Focused.Background" Color="{DynamicResource Window.Background.Color}"/>
    <SolidColorBrush x:Key="FavoritesButton.Focused.Key.Foreground" Color="{DynamicResource Window.Text.Color}"/>
    <SolidColorBrush x:Key="FavoritesButton.Focused.Text.Foreground" Color="{DynamicResource Window.Text.Color}"/>

    <Thickness x:Key="FavoritesButton.MouseOver.Border.Thickness">1,1,1,1</Thickness>
    <Thickness x:Key="FavoritesButton.Focused.Border.Thickness">2,2,2,2</Thickness>

    <!--TabButton)-->
    <SolidColorBrush x:Key="TabButton.BorderBrush" Color="{DynamicResource Window.Text.Color}" Opacity="0.5"/>
    <SolidColorBrush x:Key="TabButton.Background" Color="{DynamicResource Window.Background.Color}"/>
    <SolidColorBrush x:Key="TabButton.Key.Foreground" Color="{DynamicResource Window.Text.Color}" />
    <SolidColorBrush x:Key="TabButton.Text.Foreground" Color="{DynamicResource Window.Text.Color}" />

    <SolidColorBrush x:Key="TabButton.MouseOver.BorderBrush" Color="{DynamicResource Window.Text.Color}"/>
    <SolidColorBrush x:Key="TabButton.MouseOver.Background" Color="{DynamicResource Window.Text.Color}"/>
    <SolidColorBrush x:Key="TabButton.MouseOver.Key.Foreground" Color="{DynamicResource Window.Background.Color}"/>
    <SolidColorBrush x:Key="TabButton.MouseOver.Text.Foreground" Color="{DynamicResource Window.Background.Color}"/>

    <SolidColorBrush x:Key="TabButton.Focused.BorderBrush" Color="{DynamicResource Window.Text.Color}"/>
    <SolidColorBrush x:Key="TabButton.Focused.Background" Color="{DynamicResource Window.Background.Color}"/>
    <SolidColorBrush x:Key="TabButton.Focused.Key.Foreground" Color="{DynamicResource Window.Text.Color}" />
    <SolidColorBrush x:Key="TabButton.Focused.Text.Foreground" Color="{DynamicResource Window.Text.Color}" />

    <Thickness x:Key="TabButton.MouseOver.Border.Thickness">1,1,1,1</Thickness>
    <Thickness x:Key="TabButton.Focused.Border.Thickness">2,2,2,2</Thickness>

    <!--MainTab-->
    <SolidColorBrush x:Key="MainTab.BorderBrush" Color="{DynamicResource Window.Text.Color}" Opacity="0.5"/>

    <SolidColorBrush x:Key="MainTab.Tab.UnSelected.Background" Color="{DynamicResource Window.Background.Color}" />
    <SolidColorBrush x:Key="MainTab.Tab.UnSelected.Key.Foreground" Color="{DynamicResource Window.Text.Color}"/>
    <SolidColorBrush x:Key="MainTab.Tab.UnSelected.Text.Foreground" Color="{DynamicResource Window.Text.Color}"/>

    <SolidColorBrush x:Key="MainTab.Tab.MouseOver.Background" Color="{DynamicResource Window.Text.Color}"/>
    <SolidColorBrush x:Key="MainTab.Tab.MouseOver.Foreground" Color="{DynamicResource Window.Background.Color}"/>

    <SolidColorBrush x:Key="MainTab.Tab.Selected.Background" Color="{DynamicResource MainTab.Tab.Selected.Background.Color}"/>
    <SolidColorBrush x:Key="MainTab.Tab.Selected.Key.Foreground" Color="{DynamicResource Window.Text.Color}" />
    <SolidColorBrush x:Key="MainTab.Tab.Selected.Text.Foreground" Color="{DynamicResource Window.Text.Color}" />

    <!--Menu-->
    <SolidColorBrush x:Key="Menu.Foreground" Color="{DynamicResource Window.Text.Color}" />
    <SolidColorBrush x:Key="Menu.Background" Color="{DynamicResource Window.Background.Color}" />
    <SolidColorBrush x:Key="Menu.BorderBrush" Color="{DynamicResource Window.Text.Color}" />
    <SolidColorBrush x:Key="Menu.Disabled.Foreground" Color="{DynamicResource Window.Text.Color}" Opacity="0.5" />

    <!--MainGridSplitter-->
    <SolidColorBrush x:Key="MainGridSplitter.Background" Color="Transparent" />

    <!--Window-->
    <SolidColorBrush x:Key="Window.Background" Color="{DynamicResource Window.Background.Color}" />
    <SolidColorBrush x:Key="Window.Foreground" Color="{DynamicResource Window.Text.Color}" />

</ResourceDictionary>
